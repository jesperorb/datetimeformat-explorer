{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@options/*": ["src/options/*"],
      "@utils/*": ["src/utils/*"],
      "@store/*": ["src/store/*"],
      "@locale-data/*": ["src/locale-data/*"],
      "@tabs": ["src/tabs.ts"],
    },
    "lib": ["ES2020.Intl", "ES2018.Intl", "ES2021.intl", "DOM"]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "public/*", ".eslintrc.js", ".prettierrc.js"]
}
